FROM node:20-alpine

RUN apk add --no-cache python3 make g++

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./
COPY nest-cli.json ./
COPY tsconfig*.json ./
COPY .swcrc ./

# Install NestJS CLI globally and dependencies
RUN npm install -g @nestjs/cli
RUN npm install

# Copy source code
COPY . .

# Copy environment files
COPY .env* ./

# Build the application
RUN npm run build

EXPOSE 8080

# Use start:dev for development with hot reload
CMD ["npm", "run", "start"]